---
// src/admin/components/DashboardPage.astro
import DashboardController from './DashboardController.astro';
import '../../styles/admin.css';
---

<div id="dashboard-container" class="dashboard">
    <!-- Header -->
    <header class="dashboard-header">
        <div class="header-left">
            <h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
            <p>Bem-vindo ao painel administrativo</p>
        </div>
        <div class="header-right">
            <button id="logout-btn" class="btn btn-secondary">
                <i class="fas fa-sign-out-alt"></i>
                Sair
            </button>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="dashboard-nav">
        <ul class="nav-list">
            <li class="nav-item active" data-view="overview">
                <i class="fas fa-home"></i>
                <span>Visão Geral</span>
            </li>
            <li class="nav-item" data-view="projects">
                <i class="fas fa-project-diagram"></i>
                <span>Projetos</span>
            </li>
            <li class="nav-item" data-view="blog">
                <i class="fas fa-blog"></i>
                <span>Blog</span>
            </li>
            <li class="nav-item" data-view="messages">
                <i class="fas fa-envelope"></i>
                <span>Mensagens</span>
            </li>
            <li class="nav-item" data-view="settings">
                <i class="fas fa-cog"></i>
                <span>Configurações</span>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="dashboard-main">
        <!-- Overview View -->
        <div id="overview-view" class="view active">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="projects-count">0</h3>
                        <p>Projetos</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-blog"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="posts-count">0</h3>
                        <p>Posts do Blog</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="messages-count">0</h3>
                        <p>Mensagens</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div class="stat-content">
                        <h3 id="visits-count">0</h3>
                        <p>Visitas</p>
                    </div>
                </div>
            </div>

            <div class="recent-activity">
                <h2>Atividades Recentes</h2>
                <div id="recent-activity-list" class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-circle-notch fa-spin"></i>
                        </div>
                        <div class="activity-content">
                            <p>Carregando atividades...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Projects View -->
        <div id="projects-view" class="view">
            <div class="view-header">
                <h2>Gerenciar Projetos</h2>
                <button id="add-project-btn" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Novo Projeto
                </button>
            </div>
            <div id="projects-list" class="data-list">
                <div class="loading-state">
                    <i class="fas fa-circle-notch fa-spin"></i>
                    <p>Carregando projetos...</p>
                </div>
            </div>
        </div>

        <!-- Blog View -->
        <div id="blog-view" class="view">
            <div class="view-header">
                <h2>Gerenciar Blog</h2>
                <button id="add-post-btn" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Novo Post
                </button>
            </div>
            <div id="posts-list" class="data-list">
                <div class="loading-state">
                    <i class="fas fa-circle-notch fa-spin"></i>
                    <p>Carregando posts...</p>
                </div>
            </div>
        </div>

        <!-- Messages View -->
        <div id="messages-view" class="view">
            <div class="view-header">
                <h2>Mensagens de Contato</h2>
                <button id="refresh-messages-btn" class="btn btn-secondary">
                    <i class="fas fa-sync"></i>
                    Atualizar
                </button>
            </div>
            <div id="messages-list" class="data-list">
                <div class="loading-state">
                    <i class="fas fa-circle-notch fa-spin"></i>
                    <p>Carregando mensagens...</p>
                </div>
            </div>
        </div>

        <!-- Settings View -->
        <div id="settings-view" class="view">
            <div class="view-header">
                <h2>Configurações do Sistema</h2>
            </div>
            <div class="settings-form">
                <form id="settings-form">
                    <div class="form-section">
                        <h3>Informações Pessoais</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="site-title">Título do Site</label>
                                <input type="text" id="site-title" name="siteTitle">
                            </div>
                            <div class="form-group">
                                <label for="site-description">Descrição do Site</label>
                                <textarea id="site-description" name="siteDescription" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3>Configurações de Contato</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="contact-email">E-mail de Contato</label>
                                <input type="email" id="contact-email" name="contactEmail">
                            </div>
                            <div class="form-group">
                                <label for="contact-phone">Telefone</label>
                                <input type="tel" id="contact-phone" name="contactPhone">
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            Salvar Configurações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

