---
// HomeSkeleton.astro - Skeleton loading para p√°gina inicial
---

<div class="animate-pulse">
	<!-- Hero Section -->
	<section class="pt-32 pb-20 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-6">
			<div class="h-16 bg-gray-700/50 rounded-lg w-3/4 mx-auto"></div>
			<div class="h-6 bg-gray-700/50 rounded-lg w-1/2 mx-auto"></div>
			<div class="h-4 bg-gray-700/50 rounded w-2/3 mx-auto"></div>
			<div class="flex justify-center gap-4 mt-8">
				<div class="h-12 bg-gray-700/50 rounded-lg w-32"></div>
				<div class="h-12 bg-gray-700/50 rounded-lg w-32"></div>
			</div>
		</div>
	</section>

	<!-- Featured Projects Section -->
	<section class="py-20 bg-gray-950">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12">
				<div class="h-10 bg-gray-700/50 rounded-lg w-64 mx-auto mb-4"></div>
				<div class="h-5 bg-gray-700/50 rounded w-96 mx-auto"></div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{Array.from({ length: 6 }, (_, i) => (
					<div class="bg-gray-800/50 backdrop-blur-sm rounded-xl overflow-hidden border border-gray-700/50">
						<!-- Project Image -->
						<div class="h-48 bg-gray-700/50"></div>

						<!-- Project Content -->
						<div class="p-6">
							<div class="h-6 bg-gray-700/50 rounded-lg mb-3"></div>
							<div class="space-y-2 mb-4">
								<div class="h-4 bg-gray-700/50 rounded"></div>
								<div class="h-4 bg-gray-700/50 rounded w-3/4"></div>
								<div class="h-4 bg-gray-700/50 rounded w-1/2"></div>
							</div>
							<div class="flex flex-wrap gap-2 mb-4">
								<div class="h-6 bg-gray-700/50 rounded-full w-16"></div>
								<div class="h-6 bg-gray-700/50 rounded-full w-20"></div>
								<div class="h-6 bg-gray-700/50 rounded-full w-14"></div>
							</div>
							<div class="flex gap-3">
								<div class="h-10 bg-gray-700/50 rounded-lg flex-1"></div>
								<div class="h-10 bg-gray-700/50 rounded-lg flex-1"></div>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Blog Section -->
	<section class="py-20 bg-gray-900">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12">
				<div class="h-10 bg-gray-700/50 rounded-lg w-48 mx-auto mb-4"></div>
				<div class="h-5 bg-gray-700/50 rounded w-80 mx-auto"></div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{Array.from({ length: 3 }, (_, i) => (
					<div class="bg-gray-800/50 backdrop-blur-sm rounded-xl overflow-hidden border border-gray-700/50">
						<div class="h-48 bg-gray-700/50"></div>
						<div class="p-6">
							<div class="flex items-center gap-4 mb-3">
								<div class="h-4 bg-gray-700/50 rounded w-20"></div>
								<div class="h-4 bg-gray-700/50 rounded w-16"></div>
							</div>
							<div class="h-7 bg-gray-700/50 rounded-lg mb-3"></div>
							<div class="space-y-2 mb-4">
								<div class="h-4 bg-gray-700/50 rounded"></div>
								<div class="h-4 bg-gray-700/50 rounded w-5/6"></div>
								<div class="h-4 bg-gray-700/50 rounded w-4/6"></div>
							</div>
							<div class="flex flex-wrap gap-2 mb-4">
								<div class="h-6 bg-gray-700/50 rounded-full w-12"></div>
								<div class="h-6 bg-gray-700/50 rounded-full w-16"></div>
							</div>
							<div class="h-10 bg-gray-700/50 rounded-lg w-24"></div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>
</div>
