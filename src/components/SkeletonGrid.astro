---
// SkeletonGrid.astro - Componente para exibir m√∫ltiplos skeletons em grid
import SkeletonCard from './SkeletonCard.astro';

export interface Props {
	type?: 'project' | 'blog' | 'testimonial' | 'service' | 'custom';
	count?: number;
	columns?: {
		default: string;
		md: string;
		lg: string;
	};
	gap?: string;
	class?: string;
}

const {
	type = 'project',
	count = 6,
	columns = {
		default: 'grid-cols-1',
		md: 'md:grid-cols-2',
		lg: 'lg:grid-cols-3'
	},
	gap = 'gap-8',
	class: className = ''
} = Astro.props;
---

<div class={`grid ${columns.default} ${columns.md} ${columns.lg} ${gap} ${className}`}>
	{Array.from({ length: count }, (_, i) => (
		<SkeletonCard type={type} />
	))}
</div>
