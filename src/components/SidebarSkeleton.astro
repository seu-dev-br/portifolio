---
// SidebarSkeleton.astro - Skeleton loading para sidebar/navegação
export interface Props {
	items?: number;
	showAvatar?: boolean;
	showSearch?: boolean;
	class?: string;
}

const {
	items = 6,
	showAvatar = true,
	showSearch = false,
	class: className = ''
} = Astro.props;
---

<div class={`animate-pulse ${className}`}>
	<!-- Avatar/Profile Section -->
	{showAvatar && (
		<div class="flex items-center space-x-3 p-4 border-b border-gray-700/50">
			<div class="w-10 h-10 bg-gray-700/50 rounded-full"></div>
			<div class="flex-1 space-y-2">
				<div class="h-4 bg-gray-700/50 rounded w-24"></div>
				<div class="h-3 bg-gray-700/50 rounded w-32"></div>
			</div>
		</div>
	)}

	<!-- Search Bar -->
	{showSearch && (
		<div class="p-4 border-b border-gray-700/50">
			<div class="h-10 bg-gray-700/50 rounded-lg"></div>
		</div>
	)}

	<!-- Navigation Items -->
	<div class="p-4 space-y-2">
		{Array.from({ length: items }, (_, i) => (
			<div class="flex items-center space-x-3 p-3 rounded-lg">
				<div class="w-5 h-5 bg-gray-700/50 rounded"></div>
				<div class="flex-1 h-4 bg-gray-700/50 rounded"></div>
				{i < 2 && (
					<div class="w-2 h-2 bg-gray-700/50 rounded-full"></div>
				)}
			</div>
		))}
	</div>

	<!-- Footer Section -->
	<div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-700/50">
		<div class="flex items-center space-x-3">
			<div class="w-8 h-8 bg-gray-700/50 rounded"></div>
			<div class="flex-1 h-4 bg-gray-700/50 rounded w-20"></div>
		</div>
	</div>
</div>
