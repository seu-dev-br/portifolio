---
// ContactFormSkeleton.astro - Skeleton loading para formul√°rio de contato
---

<div class="animate-pulse">
	<div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700/50">
		<!-- Header -->
		<div class="h-8 bg-gray-700/50 rounded-lg w-48 mb-6"></div>

		<!-- Form Fields -->
		<div class="space-y-6">
			<!-- Name Field -->
			<div>
				<div class="h-5 bg-gray-700/50 rounded w-16 mb-2"></div>
				<div class="h-12 bg-gray-700/50 rounded-lg"></div>
			</div>

			<!-- Email Field -->
			<div>
				<div class="h-5 bg-gray-700/50 rounded w-20 mb-2"></div>
				<div class="h-12 bg-gray-700/50 rounded-lg"></div>
			</div>

			<!-- Subject Field -->
			<div>
				<div class="h-5 bg-gray-700/50 rounded w-24 mb-2"></div>
				<div class="h-12 bg-gray-700/50 rounded-lg"></div>
			</div>

			<!-- Message Field -->
			<div>
				<div class="h-5 bg-gray-700/50 rounded w-20 mb-2"></div>
				<div class="h-16 bg-gray-700/50 rounded-lg"></div>
			</div>

			<!-- Submit Button -->
			<div class="h-12 bg-gray-700/50 rounded-lg"></div>
		</div>

		<!-- Message Area -->
		<div class="h-16 bg-gray-700/50 rounded-lg mt-4 opacity-50"></div>
	</div>
</div>
