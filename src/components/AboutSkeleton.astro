---
// AboutSkeleton.astro - Skeleton loading para seção Sobre
---

<div class="animate-pulse space-y-8">
	<!-- Header Section -->
	<div class="text-center space-y-4">
		<div class="h-12 bg-gray-700/50 rounded-lg w-3/4 mx-auto"></div>
		<div class="h-6 bg-gray-700/50 rounded-lg w-1/2 mx-auto"></div>
		<div class="h-4 bg-gray-700/50 rounded w-2/3 mx-auto"></div>
	</div>

	<!-- Profile Image -->
	<div class="flex justify-center">
		<div class="w-48 h-48 bg-gray-700/50 rounded-full"></div>
	</div>

	<!-- Bio Section -->
	<div class="max-w-3xl mx-auto space-y-3">
		<div class="h-4 bg-gray-700/50 rounded"></div>
		<div class="h-4 bg-gray-700/50 rounded w-5/6"></div>
		<div class="h-4 bg-gray-700/50 rounded w-4/6"></div>
		<div class="h-4 bg-gray-700/50 rounded w-3/4"></div>
	</div>

	<!-- Skills Section -->
	<div class="space-y-4">
		<div class="h-8 bg-gray-700/50 rounded-lg w-48"></div>
		<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
			{Array.from({ length: 8 }, (_, i) => (
				<div class="h-12 bg-gray-700/50 rounded-lg"></div>
			))}
		</div>
	</div>

	<!-- Experience Section -->
	<div class="space-y-4">
		<div class="h-8 bg-gray-700/50 rounded-lg w-48"></div>
		<div class="space-y-6">
			{Array.from({ length: 3 }, (_, i) => (
				<div class="bg-gray-800/50 rounded-xl p-6 space-y-3">
					<div class="flex justify-between items-start">
						<div class="space-y-2">
							<div class="h-6 bg-gray-700/50 rounded w-48"></div>
							<div class="h-4 bg-gray-700/50 rounded w-32"></div>
						</div>
						<div class="h-4 bg-gray-700/50 rounded w-20"></div>
					</div>
					<div class="space-y-2">
						<div class="h-4 bg-gray-700/50 rounded"></div>
						<div class="h-4 bg-gray-700/50 rounded w-4/5"></div>
					</div>
				</div>
			))}
		</div>
	</div>
</div>
