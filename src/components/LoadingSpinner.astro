---
// LoadingSpinner.astro - Spinner de loading para ações assíncronas
export interface Props {
	size?: 'sm' | 'md' | 'lg';
	color?: 'primary' | 'white' | 'gray';
}

const { size = 'md', color = 'primary' } = Astro.props;

const sizeClasses = {
	sm: 'w-4 h-4',
	md: 'w-6 h-6',
	lg: 'w-8 h-8'
};

const colorClasses = {
	primary: 'text-primary-400',
	white: 'text-white',
	gray: 'text-gray-400'
};
---

<div class={`animate-spin rounded-full border-2 border-current border-t-transparent ${sizeClasses[size]} ${colorClasses[color]}`} role="status" aria-label="Carregando">
	<span class="sr-only">Carregando...</span>
</div>
