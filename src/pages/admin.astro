            async checkAuthentication() {
                try {
                    console.log('üîç Checking authentication...');
                    this.showLoading();

                    if (!this.supabase) {
                        console.error('‚ùå Supabase client not available');
                        this.showLoginError('Authentication system not ready');
                        this.showLogin();
                        return;
                    }

                    console.log('‚úÖ Supabase client available, checking session...');

                    // Check if user is logged in with Supabase
                    const { data: { session }, error } = await this.supabase.auth.getSession();

                    if (error) {
                        console.error('‚ùå Session check error:', error);
                        this.showLoginError('Failed to check authentication status');
                        this.showLogin();
                        return;
                    }

                    if (session && session.user) {
                        console.log('‚úÖ User authenticated:', session.user.email);
                        this.showDashboard();
                        await this.loadDashboardData();
                        await this.loadSettings();
                    } else {
                        console.log('‚ùå No active session found');
                        this.showLogin();
                    }
                } catch (error) {
                    console.error('‚ùå Authentication check failed:', error);
                    this.showLoginError('Authentication check failed');
                    this.showLogin();
                } finally {
                    this.hideLoading();
                }
            }

            async handleLogin(event: Event) {
                event.preventDefault();

                const emailElement = document.getElementById('email') as HTMLInputElement;
                const passwordElement = document.getElementById('password') as HTMLInputElement;

                if (!emailElement || !passwordElement) {
                    this.showLoginError('Form elements not found');
                    return;
                }

                const email = emailElement.value.trim();
                const password = passwordElement.value;

                if (!email || !password) {
                    this.showLoginError('Please fill in all fields');
                    return;
                }

                try {
                    console.log('üîê Attempting login for:', email);
                    this.showLoading();

                    if (!this.supabase) {
                        console.error('‚ùå Supabase not initialized during login');
                        this.showLoginError('Authentication system not ready. Please refresh the page.');
                        return;
                    }

                    console.log('‚úÖ Supabase available, attempting authentication...');

                    // Real Supabase authentication
                    const { data, error } = await this.supabase.auth.signInWithPassword({
                        email: email,
                        password: password
                    });

                    if (error) {
                        console.error('‚ùå Login error:', error);
                        this.showLoginError(error.message || 'Login failed');
                        return;
                    }

                    if (data.user && data.session) {
                        console.log('‚úÖ Login successful for:', data.user.email);
                        this.showDashboard();
                        await this.loadDashboardData();
                    } else {
                        console.error('‚ùå Login succeeded but no user/session data');
                        this.showLoginError('Login failed - no session created');
                    }
                } catch (error) {
                    console.error('‚ùå Login exception:', error);
                    this.showLoginError('An unexpected error occurred during login');
                } finally {
                    this.hideLoading();
                }
            }

            handleLogout() {
                localStorage.removeItem('admin_logged_in');
                this.showLogin();
                console.log('‚úÖ Logged out');
