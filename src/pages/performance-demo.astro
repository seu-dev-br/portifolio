---
// performance-demo.astro - Página de demonstração das otimizações de performance
import Layout from '../layouts/Layout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import EnhancedButton from '../components/EnhancedButton.astro';
---

<Layout title="Demonstração de Performance">
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-900/20 to-accent-blue/20"></div>
      <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
        <div class="animate-fade-in-up">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-primary-400 via-accent-cyan to-accent-blue bg-clip-text text-transparent">
            Performance Otimizada
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 mb-8">
            Sistema completo de otimização com astro:assets, code splitting e Service Worker
          </p>
          <div class="animate-fade-in-up animate-stagger-2">
            <EnhancedButton text="Explorar Otimizações" variant="primary" size="lg" class="magnetic" />
          </div>
        </div>
      </div>
    </section>

    <!-- Performance Features -->
    <section class="py-20 bg-gray-950 reveal">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-cyan bg-clip-text text-transparent">
            Recursos de Performance
          </h2>
          <p class="text-gray-400 text-lg">
            Tecnologias implementadas para máxima performance
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Astro Assets -->
          <div class="text-center p-6 bg-gray-800/30 rounded-xl">
            <div class="w-16 h-16 bg-green-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Astro Assets</h3>
            <p class="text-gray-400">Otimização automática de imagens com múltiplos formatos</p>
          </div>

          <!-- Code Splitting -->
          <div class="text-center p-6 bg-gray-800/30 rounded-xl">
            <div class="w-16 h-16 bg-blue-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Code Splitting</h3>
            <p class="text-gray-400">Divisão inteligente de código por rotas e componentes</p>
          </div>

          <!-- Service Worker -->
          <div class="text-center p-6 bg-gray-800/30 rounded-xl">
            <div class="w-16 h-16 bg-purple-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Service Worker</h3>
            <p class="text-gray-400">Cache offline e carregamento instantâneo</p>
          </div>

          <!-- Compression -->
          <div class="text-center p-6 bg-gray-800/30 rounded-xl">
            <div class="w-16 h-16 bg-orange-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Compressão</h3>
            <p class="text-gray-400">Assets comprimidos com Gzip e Brotli</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Image Optimization Demo -->
    <section class="py-20 bg-gray-900/50 reveal">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-cyan bg-clip-text text-transparent">
            Otimização de Imagens
          </h2>
          <p class="text-gray-400 text-lg">
            Demonstração do componente OptimizedImage com múltiplos formatos
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Placeholder images for demo -->
          <div class="bg-gray-800/50 rounded-xl p-6 text-center">
            <div class="w-full h-48 bg-gradient-to-br from-primary-500/20 to-accent-cyan/20 rounded-lg mb-4 flex items-center justify-center">
              <svg class="w-16 h-16 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Imagem AVIF</h3>
            <p class="text-gray-400 text-sm">Formato moderno com melhor compressão</p>
            <div class="mt-4 text-xs text-gray-500">
              <p>📊 Tamanho estimado: ~15KB</p>
              <p>🎯 Qualidade: 80%</p>
            </div>
          </div>

          <div class="bg-gray-800/50 rounded-xl p-6 text-center">
            <div class="w-full h-48 bg-gradient-to-br from-accent-cyan/20 to-accent-blue/20 rounded-lg mb-4 flex items-center justify-center">
              <svg class="w-16 h-16 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Imagem WebP</h3>
            <p class="text-gray-400 text-sm">Fallback otimizado para navegadores modernos</p>
            <div class="mt-4 text-xs text-gray-500">
              <p>📊 Tamanho estimado: ~20KB</p>
              <p>🎯 Qualidade: 80%</p>
            </div>
          </div>

          <div class="bg-gray-800/50 rounded-xl p-6 text-center">
            <div class="w-full h-48 bg-gradient-to-br from-accent-blue/20 to-primary-500/20 rounded-lg mb-4 flex items-center justify-center">
              <svg class="w-16 h-16 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Imagem Original</h3>
            <p class="text-gray-400 text-sm">Fallback para navegadores legados</p>
            <div class="mt-4 text-xs text-gray-500">
              <p>📊 Tamanho estimado: ~35KB</p>
              <p>🎯 Qualidade: 80%</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Code Splitting Demo -->
    <section class="py-20 bg-gray-950 reveal">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary-400 to-accent-cyan bg-clip-text text-transparent">
            Code Splitting Inteligente
          </h2>
          <p class="text-gray-400 text-lg">
            Chunks otimizados por funcionalidade e rota
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Bundle Analysis -->
          <div class="bg-gray-800/50 rounded-xl p-8">
            <h3 class="text-2xl font-semibold mb-6">Análise de Bundles</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-300">Supabase Chunk</span>
                <span class="text-green-400 font-mono">~45KB</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-300">UI Components</span>
                <span class="text-blue-400 font-mono">~25KB</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-300">Animations</span>
                <span class="text-purple-400 font-mono">~15KB</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-300">Vendor Libraries</span>
                <span class="text-orange-400 font-mono">~60KB</span>
              </div>
            </div>
            <div class="mt-6 p-4 bg-gray-700/50 rounded-lg">
              <p class="text-sm text-gray-400">
                <strong>Total estimado:</strong> ~145KB (vs ~300KB sem splitting)
              </p>
            </div>
          </div>

          <!-- Loading Strategy -->
          <div class="bg-gray-800/50 rounded-xl p-8">
            <h3 class="text-2xl font-semibold mb-6">Estratégia de Carregamento</h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-400 rounded-full mt-2"></div>
                <div>
                  <h4 class="font-medium text-white">Critical Path</h4>
                  <p class="text-sm text-gray-400">CSS e JavaScript essenciais carregados primeiro</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full mt-2"></div>
                <div>
                  <h4 class="font-medium text-white">Lazy Loading</h4>
                  <p class="text-sm text-gray-400">Componentes carregados sob demanda</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-purple-400 rounded-full mt-2"></div>
                <div>
                  <h4 class="font-medium text-white">Prefetching</h4>
                  <p class="text-sm text-gray-400">Recursos futuros carregados em background</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Worker Status -->
    <section class="py-20 bg-gray-900/50 reveal">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold mb-8 bg-gradient-to-r from-primary-400 to-accent-cyan bg-clip-text text-transparent">
          Service Worker Status
        </h2>

        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700/50">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-green-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2">Registrado</h3>
              <p class="text-gray-400 text-sm">Service Worker ativo</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-blue-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2">Cache Ativo</h3>
              <p class="text-gray-400 text-sm">Recursos em cache</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-purple-500/20 rounded-lg mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold mb-2">Offline Ready</h3>
              <p class="text-gray-400 text-sm">Funciona offline</p>
            </div>
          </div>

          <div class="text-center">
            <p class="text-gray-400 text-sm mb-4">
              Status do Service Worker será atualizado dinamicamente
            </p>
            <div class="flex justify-center gap-4">
              <button
                id="check-sw-status"
                class="bg-primary-600 hover:bg-primary-500 text-white px-4 py-2 rounded-lg transition-colors duration-300"
              >
                Verificar Status
              </button>
              <button
                id="clear-cache"
                class="bg-gray-600 hover:bg-gray-500 text-white px-4 py-2 rounded-lg transition-colors duration-300"
              >
                Limpar Cache
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<script>
  // Service Worker status monitoring
  document.addEventListener('DOMContentLoaded', () => {
    const checkStatusBtn = document.getElementById('check-sw-status');
    const clearCacheBtn = document.getElementById('clear-cache');

    checkStatusBtn?.addEventListener('click', () => {
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.getRegistrations().then(registrations => {
          if (registrations.length > 0) {
            alert(`✅ Service Worker ativo!\nRegistrations: ${registrations.length}`);
          } else {
            alert('❌ Nenhum Service Worker registrado');
          }
        });
      } else {
        alert('❌ Service Worker não suportado neste navegador');
      }
    });

    clearCacheBtn?.addEventListener('click', () => {
      if ('caches' in window) {
        caches.keys().then(names => {
          Promise.all(names.map(name => caches.delete(name))).then(() => {
            alert('🗑️ Cache limpo com sucesso!');
          });
        });
      } else {
        alert('❌ Cache API não suportada');
      }
    });
  });
</script>
