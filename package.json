{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "tsx scripts/check-env.ts && astro build",
    "build:optimized": "node scripts/check-env.js && astro build && node scripts/generate-sw.js",
    "build:windows": "build.bat",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build:optimized && echo 'Build concluído! Faça upload da pasta dist/ para seu serviço de hospedagem'",
    "deploy:vercel": "npm run build:optimized && vercel --prod",
    "deploy:netlify": "npm run build:optimized && netlify deploy --prod --dir=dist",
    "prebuild": "echo 'Iniciando build do projeto...'",
    "postbuild": "echo 'Build concluído com sucesso!'",
    "generate-sw": "node scripts/generate-sw.js",
    "check-secrets": "node scripts/check-secrets.js",
    "test:build": "test-build-deploy.bat",
    "test:deploy": "simulate-deploy.bat",
    "test:vercel": "simulate-vercel-deploy.bat",
    "diagnose": "node scripts/diagnose-build-deploy.js",
    "test-post-creation": "tsx scripts/test-post-creation.ts",
    "test-frontend-apis": "tsx scripts/test-frontend-apis.ts",
    "test-integration": "tsx scripts/test-integration.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.4.3",
    "@astrojs/vercel": "^8.2.7",
    "@supabase/supabase-js": "^2.57.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.13.5",
    "marked": "^16.2.1",
    "swiper": "^11.2.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@types/node": "^24.5.2",
    "dotenv": "^17.2.2",
    "tailwindcss": "^3.4.17",
    "vitest": "^3.2.4"
  }
}
